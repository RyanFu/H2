<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:scaleType="center" >

    <com.prettygirl.superstar.components.CustomImageView
        android:id="@+id/imageContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/loadingProgressBar"
        style="@style/customProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="2dip"
        android:background="@null"
        android:orientation="vertical"
        android:padding="7dip" >

        <ImageView
            android:id="@+id/imageEditor"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:background="@drawable/bottom_view_bg"
            android:src="@drawable/magic_wand_normal"
            android:visibility="gone" />
    </LinearLayout>

    <com.capricorn.ArcMenu
        android:id="@+id/image_arc_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/arc_menu_margin_bottom"
        android:layout_marginRight="@dimen/arc_menu_margin_right"
        android:visibility="gone" />

</merge>