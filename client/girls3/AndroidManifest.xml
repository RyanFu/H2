<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.prettygirl.avgallery1"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />

    <application
        android:name="com.prettygirl.avgallery.AvApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MActivity" >
        <activity
            android:name="com.prettygirl.avgallery.AvGalleryMainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.prettygirl.avgallery.AvGalleryDetailActivity"
            android:label="@string/app_name"
            android:theme="@style/MNoTitleActivity" >
        </activity>
        <activity
            android:name="com.prettygirl.avgallery.GalleryDetailActivity"
            android:label="@string/app_name"
            android:theme="@style/MNoTitleActivity" >
        </activity>
        <activity
            android:name="com.prettygirl.avgallery.ImageEditorActivity"
            android:label="@string/app_name"
            android:theme="@style/MNoTitleActivity" >
        </activity>
        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenLayout|uiMode|screenSize|smallestScreenSize" />
    </application>

</manifest>