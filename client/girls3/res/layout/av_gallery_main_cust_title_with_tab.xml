<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tabs="http://schemas.android.com/apk/res/com.prettygirl.avgallery1"
    android:id="@+id/custom_entry_title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom" >

    <TextView
        style="?android:attr/windowTitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@null"
        android:fadingEdge="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="5dip"
        android:text="@string/app_name" />

    <com.prettygirl.avgallery.components.FixedTabsView
        android:id="@+id/fixedTabsView"
        android:layout_width="wrap_content"
        android:layout_height="35dip"
        tabs:dividerMarginBottom="3dip"
        tabs:dividerMarginTop="3dip"
        tabs:dividerVisibility="invisible" />

</LinearLayout>