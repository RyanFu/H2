<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/custom_entry_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/theme_activity_title_height"
            android:background="@drawable/title_bar_bg"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/android_title_back"
                android:layout_width="48dip"
                android:layout_height="48dip"
                android:padding="5dip"
                android:src="@drawable/title_back_icon"
                android:background="@drawable/title_back_background"
                android:visibility="gone" />

            <View
                android:id="@+id/android_title_back_div"
                android:layout_width="3dp"
                android:layout_height="15dip"
                android:background="@drawable/button_divider" />

            <TextView
                android:id="@+id/android_title"
                style="@style/PreferenceWindowTitleText"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:fadingEdge="horizontal"
                android:gravity="center_vertical"
                android:paddingLeft="12dip" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/android_layout_container"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1" >
        </FrameLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="160dip"
        android:layout_height="@dimen/theme_activity_title_ad_height"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/entry_title_ad_bg" >

        <ImageView
            android:id="@+id/entry_point_ad_icon"
            android:layout_width="68dip"
            android:layout_height="68dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="5dip"
            android:src="@drawable/ad_img" />
    </RelativeLayout>

</RelativeLayout>