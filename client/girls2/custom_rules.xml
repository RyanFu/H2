    </target>

    <macrodef name="build.package.offline" >

        <attribute name="package.name" />

        <attribute name="app.name" />

        <attribute name="version.code" />

        <attribute name="version.name" />

        <attribute name="umeng.key" />

        <attribute name="umeng.channel" />

        <sequential>

            <ant
                antfile="build.xml"
                target="package.offline" >

                <property file="ant.properties" />

                <property
                    name="release.dir"
                    location="../../releases/channel/@{umeng.channel}" />

                <property
                    name="package.name"
                    value="@{package.name}" />

                <property
                    name="app.name"
                    value="@{app.name}" />

                <property
                    name="build.version.code"
                    value="@{version.code}" />

                <property
                    name="build.version.name"
                    value="@{version.name}" />

                <property
                    name="umeng.key"
                    value="@{umeng.key}" />

                <property
                    name="umeng.channel"
                    value="@{umeng.channel}" />
            </ant>
        </sequential>
    </macrodef>

