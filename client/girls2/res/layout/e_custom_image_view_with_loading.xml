<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:scaleType="center" >

    <com.prettygirl.app.components.CustomImageView
        android:id="@+id/imageContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/loadingProgressBar"
        style="@style/customProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/rank_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:background="@drawable/rank_left_background"
        android:gravity="center"
        android:minWidth="64dip"
        android:shadowColor="#ffefefef"
        android:shadowDx="1.5"
        android:shadowDy="1.5"
        android:shadowRadius="2"
        android:singleLine="true"
        android:textColor="@color/custom_point_text_color"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:gravity="right"
        android:orientation="vertical"
        android:paddingTop="7dip" >

        <com.prettygirl.app.components.MButton
            android:id="@+id/thumb_up_coins"
            android:layout_width="wrap_content"
            android:layout_height="48dip"
            android:layout_marginBottom="10dip"
            android:background="@drawable/thumb_up_background"
            android:drawableRight="@drawable/thumb_up_normal"
            android:gravity="center"
            android:paddingLeft="5dip"
            android:singleLine="true"
            android:textColor="@color/custom_point_text_color"
            android:visibility="gone" />

        <com.prettygirl.app.components.MButton
            android:id="@+id/thumb_down_coins"
            android:layout_width="wrap_content"
            android:layout_height="48dip"
            android:background="@drawable/thumb_up_background"
            android:drawableRight="@drawable/thumb_down_normal"
            android:gravity="center"
            android:paddingLeft="5dip"
            android:singleLine="true"
            android:textColor="@color/custom_point_text_color"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="2dip"
        android:background="@null"
        android:orientation="vertical"
        android:padding="7dip" >

        <ImageView
            android:id="@+id/imageAd"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:layout_marginBottom="5dip"
            android:background="@drawable/bottom_view_bg"
            android:src="@drawable/ad_icon_girl"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageFavorite"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:layout_marginBottom="5dip"
            android:background="@drawable/bottom_view_bg"
            android:src="@drawable/e_favorite_normal"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageEditor"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:background="@drawable/bottom_view_bg"
            android:src="@drawable/magic_wand_normal"
            android:visibility="gone" />
    </LinearLayout>

    <com.capricorn.ArcMenu
        android:id="@+id/image_arc_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/arc_menu_margin_bottom"
        android:layout_marginRight="@dimen/arc_menu_margin_right"
        android:visibility="gone" />

</merge>