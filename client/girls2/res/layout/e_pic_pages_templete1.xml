<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/template_padding" >

    <include
        android:id="@+id/image_container1"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        layout="@layout/e_pic_pages_templete_item1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginTop="@dimen/template_padding"
        android:layout_weight="1" >

        <include
            android:id="@+id/image_container2"
            style="@style/fillall"
            layout="@layout/e_pic_pages_templete_item2" />

        <TextView
            android:id="@+id/pages_index"
            style="@style/pageIndexStyleBottom" />
    </RelativeLayout>
